# SDL2=`sdl2-config --cflags --libs`
# SDL2=`../build/sdl2-config --cflags --libs`
SDL2=-I/home/alex/Music/zic/SDL/include -D_REENTRANT -L/home/alex/Music/zic/SDL/build/build/.libs -Wl,-rpath,/home/alex/Music/zic/SDL/build/build/.libs -Wl,--enable-new-dtags -lSDL2

main:
	rm -rf build
	mkdir build
	@echo "SDL config:\n$(SDL2)\n\n"
	gcc -o build/testoffscreen testoffscreen.c $(SDL2)
	cd build && ./testoffscreen

build:
	rm -rf ../build
	mkdir ../build
	cd ../build && ../configure --disable-atomic --disable-audio --disable-joystick --disable-haptic --disable-hidapi --disable-sensor --disable-power --disable-filesystem --disable-file --disable-misc --disable-locale --disable-cpuinfo --disable-video-x11 --disable-x11-shared --disable-video-vivante --disable-video-wayland --enable-video-waveshare
	cd ../build && make

